<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/white_rect_shadow"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/white_rect_shadow"
                android:id="@+id/lyt_picture">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/root_view">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/pictureBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/patient"
                        app:riv_corner_radius="3dp"
                        app:riv_border_width="1dp"
                        app:riv_border_color="#fff"/>
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/reportBox"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Medical Examination Report: This information is not held centrally by the Trust..."
                        android:textSize="12sp"
                        android:singleLine="false"
                        android:lines="2"
                        android:lineSpacingExtra="2dp"
                        android:ellipsize="end"
                        android:textColor="#000"/>
                    <ImageView
                        android:id="@+id/ic_audio"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_audio"
                        android:tint="@color/colorAccent"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/datetimeBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jun 18, 2018"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:textColor="#c27c13"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patientID"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text"/>
                    <TextView
                        android:id="@+id/patientIDBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vwd35hhse9"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimaryDark"/>
                    <View
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/ic_status"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_checked"
                        android:tint="@color/colorPrimary"
                        android:layout_marginRight="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:background="@drawable/ic_right"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>




















